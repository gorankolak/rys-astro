---
import '../styles/global.css'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'

const {
  title = 'Rave Your Soul',
  description = 'Independent techno label focused on groove-driven, modern electronic music.',
} = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://raveyoursoul.com" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="images/favicon.svg" />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="images/favicon-32x32.png"
    />
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png" />
  </head>

  <body class="bg-(--rys-black) text-(--rys-orange) antialiased">
    <!-- Background animations -->
    <div class="pointer-events-none fixed inset-0 -z-10 overflow-hidden">
      <div class="rys-space">
        <div class="shape shape-disc layer-mid"></div>
        <div class="shape shape-ring layer-back"></div>
        <div class="shape shape-bar layer-front"></div>
        <div class="shape shape-poly layer-mid"></div>
      </div>
    </div>

    <div class="grid min-h-screen grid-rows-[auto_1fr_auto]">
      <Header />

      <main class="px-6">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
