---
type LogoSize = 'sm' | 'md' | 'lg'

interface Props {
  size?: LogoSize
  alt?: string
}

const { size = 'lg', alt = 'Rave Your Soul' } = Astro.props as Props

const sizes: Record<LogoSize, string> = {
  sm: 'h-6',
  md: 'h-8',
  lg: 'h-10',
}
---

<img
  src="/images/rave-your-soul-logo.svg"
  alt="Rave Your Soul"
  class={`block h-16 md:h-18 w-auto select-none`}
  loading="eager"
/>
