---
import Logo from './Logo.astro'

const isOurStory = Astro.url.pathname.startsWith('/our-story')
---

<header class="px-6 pt-8">
  <div class="mx-auto flex max-w-5xl items-center justify-between">
    <a href="/" aria-label="Rave Your Soul home">
      <Logo />
    </a>

    <nav>
      <a
        href="/our-story"
        aria-current={isOurStory ? 'page' : undefined}
        class={`font-heading text-md tracking-[0.3em] text-(--rys-orange)
  uppercase underline-offset-4
  transition
  ${
    isOurStory
      ? 'underline opacity-80 cursor-default'
      : 'hover:underline hover:opacity-80'
  }
`}
      >
        Our Story
      </a>
    </nav>
  </div>
</header>
